/* TimeRing Glassy Theme â€“ Apple-Style Glass Interface */

/* === GLOBAL === */
QWidget[darkTheme="false"] {
    background-color: rgba(247, 249, 252, 0.85);
    color: #1D1D1F;
    font-family: "SF Pro Display", "Segoe UI", "Inter", sans-serif;
    font-size: 14px;
}

QWidget[darkTheme="true"] {
    background-color: rgba(26, 32, 44, 0.85);
    color: #F5F5F7;
}

/* === MAIN WINDOW GLASS EFFECT === */
QMainWindow {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
                               stop:0 rgba(255, 255, 255, 0.9),
                               stop:0.02 rgba(255, 255, 255, 0.88),
                               stop:0.5 rgba(247, 249, 252, 0.85),
                               stop:0.98 rgba(240, 245, 251, 0.82),
                               stop:1 rgba(240, 245, 251, 0.8));
    border-radius: 20px;
    border: 1px solid rgba(255, 255, 255, 0.5);
}

QMainWindow[darkTheme="true"] {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
                               stop:0 rgba(0, 0, 0, 0.8),
                               stop:0.02 rgba(10, 10, 10, 0.82),
                               stop:0.5 rgba(26, 32, 44, 0.85),
                               stop:0.98 rgba(45, 55, 72, 0.77),
                               stop:1 rgba(45, 55, 72, 0.75));
    border: 1px solid rgba(255, 255, 255, 0.1);
}

/* === BUTTONS === */
QPushButton {
    border-radius: 14px;
    padding: 12px 24px;
    font-weight: 600;
    border: 1px solid rgba(255, 255, 255, 0.3);
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                               stop:0 rgba(60, 101, 160, 0.95),
                               stop:0.02 rgba(65, 106, 165, 0.93),
                               stop:0.98 rgba(43, 76, 128, 0.92),
                               stop:1 rgba(43, 76, 128, 0.9));
    color: #FFFFFF;
}



QPushButton:pressed {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                               stop:0 rgba(43, 76, 128, 0.9),
                               stop:0.02 rgba(38, 71, 123, 0.88),
                               stop:0.98 rgba(35, 60, 100, 0.87),
                               stop:1 rgba(35, 60, 100, 0.85));
    border: 1px solid rgba(255, 255, 255, 0.2);
}

/* Secondary Glass Button */
QPushButton#secondaryButton {
    background-color: rgba(255, 255, 255, 0.15);
    border: 1px solid rgba(60, 101, 160, 0.3);
}

QPushButton#secondaryButton:hover {
    background-color: rgba(60, 101, 160, 0.2);
    border: 1px solid rgba(60, 101, 160, 0.5);
}

QPushButton#secondaryButton[darkTheme="true"] {
    background-color: rgba(255, 255, 255, 0.1);
    color: #5CAAC5;
    border: 1px solid rgba(92, 170, 197, 0.3);
}

QPushButton#secondaryButton[darkTheme="true"]:hover {
    background-color: rgba(92, 170, 197, 0.2);
    border: 1px solid rgba(92, 170, 197, 0.5);
}

/* Danger Glass Button */
QPushButton#dangerButton {
    background-color: rgba(229, 62, 62, 0.9);
    color: #FFFFFF;
    border: 1px solid rgba(255, 255, 255, 0.2);
}

QPushButton#dangerButton:hover {
    background-color: rgba(197, 48, 48, 0.9);
    border: 1px solid rgba(255, 255, 255, 0.3);
}

/* Disabled Button Styling */
QPushButton:disabled {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                               stop:0 rgba(107, 114, 128, 0.6),
                               stop:1 rgba(75, 85, 99, 0.5));
    color: rgba(156, 163, 175, 0.8);
    border: 1px solid rgba(156, 163, 175, 0.3);
    opacity: 0.6;
}

QPushButton:disabled[darkTheme="true"] {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                               stop:0 rgba(55, 65, 81, 0.6),
                               stop:1 rgba(31, 41, 55, 0.5));
    color: rgba(107, 114, 128, 0.8);
    border: 1px solid rgba(107, 114, 128, 0.3);
    opacity: 0.6;
}

QPushButton#secondaryButton:disabled {
    background-color: rgba(156, 163, 175, 0.4);
    color: rgba(107, 114, 128, 0.6);
    border: 1px solid rgba(156, 163, 175, 0.2);
    opacity: 0.5;
}

QPushButton#dangerButton:disabled {
    background-color: rgba(156, 163, 175, 0.4);
    color: rgba(107, 114, 128, 0.6);
    border: 1px solid rgba(156, 163, 175, 0.2);
    opacity: 0.5;
}

QPushButton#warningButton:disabled {
    background-color: rgba(156, 163, 175, 0.4);
    color: rgba(107, 114, 128, 0.6);
    border: 1px solid rgba(156, 163, 175, 0.2);
    opacity: 0.5;
}

/* === INPUTS === */
QLineEdit, QTextEdit {
    border: 1px solid rgba(255, 255, 255, 0.4);
    border-radius: 12px;
    padding: 12px 18px;
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                               stop:0 rgba(255, 255, 255, 0.3),
                               stop:1 rgba(255, 255, 255, 0.2));
    selection-background-color: rgba(60, 101, 160, 0.4);
    color: #1D1D1F;
    font-size: 14px;
    font-weight: 500;
}

QLineEdit:focus, QTextEdit:focus {
    border: 2px solid rgba(60, 101, 160, 0.7);
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                               stop:0 rgba(255, 255, 255, 0.4),
                               stop:1 rgba(255, 255, 255, 0.3));
}

QWidget[darkTheme="true"] QLineEdit,
QWidget[darkTheme="true"] QTextEdit {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                               stop:0 rgba(45, 55, 72, 0.5),
                               stop:1 rgba(45, 55, 72, 0.4));
    border: 1px solid rgba(255, 255, 255, 0.15);
    color: #F5F5F7;
}

QWidget[darkTheme="true"] QLineEdit:focus,
QWidget[darkTheme="true"] QTextEdit:focus {
    border: 2px solid rgba(92, 170, 197, 0.7);
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                               stop:0 rgba(45, 55, 72, 0.7),
                               stop:1 rgba(45, 55, 72, 0.6));
}

/* === LABELS === */
QLabel#titleLabel {
    font-size: 24px;
    font-weight: 700;
    color: #3C65A0;
}

QLabel#subtitleLabel {
    font-size: 16px;
    font-weight: 500;
    color: #5CAAC5;
}

QWidget[darkTheme="true"] QLabel#titleLabel {
    color: #5CBCD5;
}

QWidget[darkTheme="true"] QLabel#subtitleLabel {
    color: #5CAAC5;
}

/* === TIMERS LIST WIDGET === */
/* Enhanced styling for the timers list */
QListWidget {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
                               stop:0 rgba(255, 255, 255, 0.2),
                               stop:0.02 rgba(255, 255, 255, 0.18),
                               stop:0.98 rgba(240, 245, 251, 0.15),
                               stop:1 rgba(240, 245, 251, 0.12));
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 16px;
    padding: 8px;
    margin: 8px 0px;
    outline: none;
}

QWidget[darkTheme="true"] QListWidget {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
                               stop:0 rgba(45, 55, 72, 0.3),
                               stop:0.02 rgba(40, 50, 67, 0.28),
                               stop:0.98 rgba(26, 32, 44, 0.25),
                               stop:1 rgba(26, 32, 44, 0.22));
    border: 1px solid rgba(255, 255, 255, 0.15);
}

QListWidget::item {
    background: transparent;
    border: none;
    padding: 0px;
    margin: 0px;
    min-height: 120px;
}

QListWidget::item:selected {
    background: transparent;
    border: none;
}

QListWidget::item:hover {
    background: transparent;
    border: none;
}

/* === GLASS CARDS === */
QFrame#timerCard {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
                               stop:0 rgba(255, 255, 255, 0.35),
                               stop:0.02 rgba(255, 255, 255, 0.32),
                               stop:0.5 rgba(255, 255, 255, 0.25),
                               stop:0.98 rgba(255, 255, 255, 0.22),
                               stop:1 rgba(255, 255, 255, 0.2));
    border-radius: 18px;
    padding: 24px;
    margin: 12px 0;
    border: 2px solid rgba(255, 255, 255, 0.6);
}

QFrame#timerCard:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
                               stop:0 rgba(255, 255, 255, 0.4),
                               stop:0.02 rgba(255, 255, 255, 0.37),
                               stop:0.5 rgba(255, 255, 255, 0.3),
                               stop:0.98 rgba(255, 255, 255, 0.27),
                               stop:1 rgba(255, 255, 255, 0.25));
    border: 2px solid rgba(255, 255, 255, 0.75);
}

QWidget[darkTheme="true"] QFrame#timerCard {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
                               stop:0 rgba(45, 55, 72, 0.4),
                               stop:0.02 rgba(40, 50, 67, 0.38),
                               stop:0.5 rgba(45, 55, 72, 0.3),
                               stop:0.98 rgba(26, 32, 44, 0.37),
                               stop:1 rgba(26, 32, 44, 0.35));
    border: 2px solid rgba(255, 255, 255, 0.25);
}

QWidget[darkTheme="true"] QFrame#timerCard:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
                               stop:0 rgba(45, 55, 72, 0.5),
                               stop:0.02 rgba(40, 50, 67, 0.47),
                               stop:0.5 rgba(45, 55, 72, 0.4),
                               stop:0.98 rgba(26, 32, 44, 0.47),
                               stop:1 rgba(26, 32, 44, 0.45));
    border: 2px solid rgba(255, 255, 255, 0.35);
}

/* === CHECKBOX === */
QCheckBox {
    font-weight: 500;
    spacing: 8px;
}

QCheckBox::indicator {
    width: 22px;
    height: 22px;
    border-radius: 8px;
    border: 2px solid rgba(255, 255, 255, 0.4);
    background-color: rgba(255, 255, 255, 0.2);
}

QCheckBox::indicator:hover {
    border: 2px solid rgba(60, 101, 160, 0.6);
    background-color: rgba(255, 255, 255, 0.3);
}

QCheckBox::indicator:checked {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
                               stop:0 rgba(60, 101, 160, 0.9),
                               stop:1 rgba(92, 170, 197, 0.9));
    border: 2px solid rgba(60, 101, 160, 0.8);
}

/* Qt CSS doesn't support ::after, so we'll handle this in Python code */

/* Dark theme checkbox */
QWidget[darkTheme="true"] QCheckBox::indicator {
    border: 2px solid rgba(255, 255, 255, 0.2);
    background-color: rgba(45, 55, 72, 0.4);
}

QWidget[darkTheme="true"] QCheckBox::indicator:hover {
    border: 2px solid rgba(92, 170, 197, 0.6);
    background-color: rgba(45, 55, 72, 0.6);
}

QWidget[darkTheme="true"] QCheckBox::indicator:checked {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
                               stop:0 rgba(92, 170, 197, 0.9),
                               stop:1 rgba(92, 205, 213, 0.9));
    border: 2px solid rgba(92, 170, 197, 0.8);
}

/* === GLASS TABS === */
QTabBar::tab {
    background-color: rgba(255, 255, 255, 0.1);
    padding: 10px 20px;
    margin-right: 4px;
    border-radius: 10px;
    font-weight: 500;
    color: #718096;
    border: 1px solid rgba(255, 255, 255, 0.2);
}

QTabBar::tab:selected {
    background-color: rgba(60, 101, 160, 0.2);
    color: #3C65A0;
    border: 1px solid rgba(60, 101, 160, 0.4);
}

QTabBar::tab:hover {
    background-color: rgba(255, 255, 255, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.3);
}

QWidget[darkTheme="true"] QTabBar::tab {
    background-color: rgba(45, 55, 72, 0.3);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: #A0AEC0;
}

QWidget[darkTheme="true"] QTabBar::tab:selected {
    background-color: rgba(92, 170, 197, 0.3);
    color: #5CAAC5;
    border: 1px solid rgba(92, 170, 197, 0.4);
}

QWidget[darkTheme="true"] QTabBar::tab:hover {
    background-color: rgba(45, 55, 72, 0.4);
    border: 1px solid rgba(255, 255, 255, 0.2);
}

/* === GLASS PROGRESS BAR === */
QProgressBar {
    border-radius: 8px;
    background-color: rgba(255, 255, 255, 0.2);
    height: 12px;
    border: 1px solid rgba(255, 255, 255, 0.3);
}

QProgressBar::chunk {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                               stop:0 rgba(60, 101, 160, 0.9),
                               stop:1 rgba(92, 170, 197, 0.9));
    border-radius: 8px;
}

QWidget[darkTheme="true"] QProgressBar {
    background-color: rgba(45, 55, 72, 0.4);
    border: 1px solid rgba(255, 255, 255, 0.1);
}

QWidget[darkTheme="true"] QProgressBar::chunk {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                               stop:0 rgba(92, 170, 197, 0.9),
                               stop:1 rgba(92, 205, 213, 0.9));
}

/* === STATUS LABELS === */
QLabel#statusLabel[status="running"] {
    color: #22C55E;
}

QLabel#statusLabel[status="paused"] {
    color: #F59E0B;
}

QLabel#statusLabel[status="ringing"] {
    color: #EF4444;
}

/* === GLASS MENU BUTTON === */
QPushButton#menuButton {
    background-color: rgba(255, 255, 255, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 10px;
    padding: 8px;
    min-width: 40px;
    color: #3C65A0;
}

QPushButton#menuButton:hover {
    background-color: rgba(255, 255, 255, 0.3);
    border: 1px solid rgba(255, 255, 255, 0.4);
}

QPushButton#menuButton:pressed {
    background-color: rgba(255, 255, 255, 0.1);
}

QWidget[darkTheme="true"] QPushButton#menuButton {
    background-color: rgba(45, 55, 72, 0.4);
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: #5CAAC5;
}

QWidget[darkTheme="true"] QPushButton#menuButton:hover {
    background-color: rgba(45, 55, 72, 0.6);
    border: 1px solid rgba(255, 255, 255, 0.3);
}

/* === GLASS DIALOGS === */
QDialog {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
                               stop:0 rgba(255, 255, 255, 0.9),
                               stop:0.02 rgba(255, 255, 255, 0.87),
                               stop:0.5 rgba(247, 249, 252, 0.85),
                               stop:0.98 rgba(240, 245, 251, 0.82),
                               stop:1 rgba(240, 245, 251, 0.8));
    border-radius: 20px;
    border: 1px solid rgba(255, 255, 255, 0.4);
}

QDialog[darkTheme="true"] {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
                               stop:0 rgba(26, 32, 44, 0.9),
                               stop:0.02 rgba(21, 27, 39, 0.87),
                               stop:0.5 rgba(45, 55, 72, 0.85),
                               stop:0.98 rgba(26, 32, 44, 0.82),
                               stop:1 rgba(26, 32, 44, 0.8));
    border: 1px solid rgba(255, 255, 255, 0.15);
}

/* === QMessageBox Styling === */
QMessageBox {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
                               stop:0 rgba(255, 255, 255, 0.9),
                               stop:0.02 rgba(255, 255, 255, 0.87),
                               stop:0.5 rgba(247, 249, 252, 0.85),
                               stop:0.98 rgba(240, 245, 251, 0.82),
                               stop:1 rgba(240, 245, 251, 0.8));
    border-radius: 20px;
    border: 1px solid rgba(255, 255, 255, 0.4);
    color: #1D1D1F;
}

QMessageBox[darkTheme="true"] {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
                               stop:0 rgba(26, 32, 44, 0.9),
                               stop:0.02 rgba(21, 27, 39, 0.87),
                               stop:0.5 rgba(45, 55, 72, 0.85),
                               stop:0.98 rgba(26, 32, 44, 0.82),
                               stop:1 rgba(26, 32, 44, 0.8));
    border: 1px solid rgba(255, 255, 255, 0.15);
    color: #F5F5F7;
}

QMessageBox QPushButton {
    min-width: 100px;
    padding: 10px 20px;
    border-radius: 12px;
    font-weight: 600;
    font-size: 14px;
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                               stop:0 rgba(60, 101, 160, 0.95),
                               stop:1 rgba(43, 76, 128, 0.9));
    color: #FFFFFF;
    border: 1px solid rgba(255, 255, 255, 0.3);
}

QMessageBox QPushButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                               stop:0 rgba(70, 111, 170, 0.95),
                               stop:1 rgba(53, 86, 138, 0.9));
    border: 1px solid rgba(255, 255, 255, 0.4);
}

/* === QGroupBox Styling === */
QGroupBox {
    font-weight: 500;
    font-size: 14px;
    color: #3C65A0;
    border: 1px solid rgba(60, 101, 160, 0.2);
    border-radius: 12px;
    margin-top: 24px;  /* Increased margin to prevent title cutoff */
    padding: 24px 16px 16px 16px;  /* Increased top padding */
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
                               stop:0 rgba(255, 255, 255, 0.15),
                               stop:0.5 rgba(255, 255, 255, 0.1),
                               stop:1 rgba(255, 255, 255, 0.05));
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 8px 16px;  /* Increased padding for better spacing */
    margin-left: 12px;
    margin-top: 2px;  /* Small top margin for better positioning */
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                               stop:0 rgba(60, 101, 160, 0.85),
                               stop:1 rgba(43, 76, 128, 0.8));
    color: #FFFFFF;
    font-weight: 600;
    font-size: 12px;
    border-radius: 8px;
    border: 1px solid rgba(255, 255, 255, 0.3);
    top: -14px;  /* Adjusted position */
}

QWidget[darkTheme="true"] QGroupBox {
    color: #5CAAC5;
    border: 1px solid rgba(92, 170, 197, 0.2);
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
                               stop:0 rgba(45, 55, 72, 0.2),
                               stop:0.5 rgba(45, 55, 72, 0.15),
                               stop:1 rgba(26, 32, 44, 0.1));
}

QWidget[darkTheme="true"] QGroupBox::title {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                               stop:0 rgba(92, 170, 197, 0.85),
                               stop:1 rgba(92, 205, 213, 0.8));
    color: #FFFFFF;
    border-radius: 8px;
    border: 1px solid rgba(255, 255, 255, 0.3);
}

/* Dialog Button Styling */
QDialogButtonBox QPushButton {
    min-width: 100px;
    padding: 10px 20px;
    border-radius: 12px;
    font-weight: 600;
    font-size: 14px;
}

QDialogButtonBox QPushButton[text="OK"],
QDialogButtonBox QPushButton[text="Accept"] {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                               stop:0 rgba(34, 197, 94, 0.9),
                               stop:1 rgba(22, 163, 74, 0.85));
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.3);
}

QDialogButtonBox QPushButton[text="Cancel"],
QDialogButtonBox QPushButton[text="Reject"] {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                               stop:0 rgba(156, 163, 175, 0.9),
                               stop:1 rgba(107, 114, 128, 0.85));
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.3);
}

/* === GLASS SCROLLBAR === */
QScrollBar:vertical {
    background: transparent;
    width: 10px;
    border-radius: 5px;
}

QScrollBar::handle:vertical {
    background: rgba(0, 0, 0, 0.2);
    border-radius: 5px;
    min-height: 20px;
}

QScrollBar::handle:vertical:hover {
    background: rgba(0, 0, 0, 0.3);
}

QWidget[darkTheme="true"] QScrollBar::handle:vertical {
    background: rgba(255, 255, 255, 0.2);
}

QWidget[darkTheme="true"] QScrollBar::handle:vertical:hover {
    background: rgba(255, 255, 255, 0.3);
}

/* === MAIN SCROLL AREA === */
/* Styling for the main scroll area */
QScrollArea {
    background: transparent;
    border: none;
}

QScrollArea > QWidget {
    background: transparent;
}

QScrollArea > QWidget > QWidget {
    background: transparent;
}

/* === HEADER TITLE === */
QLabel#headerTitleLabel {
    font-size: 20px;
    font-weight: 700;
    color: #3C65A0;
}

QWidget[darkTheme="true"] QLabel#headerTitleLabel {
    color: #5CAAC5;
}

/* === GLASS SEPARATOR === */
QFrame[frameShape="4"] { /* HLine */
    background-color: rgba(255, 255, 255, 0.3);
    max-height: 1px;
    border: none;
}

QWidget[darkTheme="true"] QFrame[frameShape="4"] {
    background-color: rgba(255, 255, 255, 0.1);
}

/* === TOOLTIP === */
QToolTip {
    background-color: rgba(0, 0, 0, 0.8);
    color: #FFFFFF;
    border: none;
    border-radius: 8px;
    padding: 6px 12px;
}

/* === GLASS CONTEXT MENU === */
QMenu {
    background-color: rgba(255, 255, 255, 0.9);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 10px;
    padding: 4px;
}

QMenu::item {
    background-color: transparent;
    padding: 6px 12px;
    border-radius: 6px;
    margin: 1px;
}

QMenu::item:selected {
    background-color: rgba(60, 101, 160, 0.2);
    color: #3C65A0;
}

QWidget[darkTheme="true"] QMenu {
    background-color: rgba(26, 32, 44, 0.9);
    border: 1px solid rgba(255, 255, 255, 0.1);
}

QWidget[darkTheme="true"] QMenu::item:selected {
    background-color: rgba(92, 170, 197, 0.2);
    color: #5CAAC5;
}

/* === APPLE-STYLE TIMER DISPLAY === */
QLabel#largeTimerDisplay {
    font-size: 56px;
    font-weight: 200;
    padding: 20px 12px;
    color: #3C65A0;
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
                               stop:0 rgba(255, 255, 255, 0.4),
                               stop:0.02 rgba(255, 255, 255, 0.37),
