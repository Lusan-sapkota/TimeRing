    border: 2px solid #dee2e6;
    border-radius: 8px;
    background-color: #ffffff;
    margin-top: 4px;
}

QTabWidget::tab-bar {
    alignment: left;
}

QTabBar::tab {
    background-color: #f8f9fa;
    color: #495057;
    border: 1px solid #dee2e6;
    border-bottom: none;
    border-radius: 8px 8px 0 0;
    padding: 12px 20px;
    margin-right: 2px;
    font-weight: 500;
    min-width: 80px;
}

QTabBar::tab:selected {
    background-color: #ffffff;
    color: #007bff;
    border-color: #007bff;
    font-weight: 600;
}

QTabBar::tab:hover:!selected {
    background-color: #e9ecef;
    color: #495057;
}

